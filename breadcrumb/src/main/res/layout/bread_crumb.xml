<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.shirley.android.breadcrumb.BreadCrumbView
        android:id="@+id/bread_crumb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        tools:listitem="@layout/item_bread_crumb"></com.shirley.android.breadcrumb.BreadCrumbView>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#bbbbbb" />

    <com.shirley.android.breadcrumb.BreadContentView
        android:id="@+id/bread_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:listitem="@layout/item_bread_content">

    </com.shirley.android.breadcrumb.BreadContentView>

</LinearLayout>